<h1>All Games</h1>
<table class="table">
    <tr>
        <th>Home team Away Team</th>
        <th>Date</th>
        <th>Field</th>
    </tr>
    <%@games.each do |game|%>
    
    <tr>
        <td><%=link_to game.home_team,game%> <%=game.away_team%></td>
        <td><%=game.date%></td>
        <td><%=game.field%></td>
        <td><%=link_to 'edit', edit_game_path(game)%>
         <%= link_to 'Delete', game_path(game), method: :delete, data: { confirm: "Are you sure you want to delete this game?" } %>
        </td>
    </tr>
    <% end %>
</table>
