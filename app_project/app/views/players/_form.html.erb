<%= form_for @player do |f| %>
    <p>
            <%= f.label :first_name %>
            <%= f.text_field :first_name, :class => 'form-control'%>
    </p>
     <p>
            <%= f.label :last_name %>
            <%= f.text_field :last_name, :class => 'form-control'%>
    </p>
    <p>
        <%= f.label :number %>
        <%= f.text_field :number, :class => 'form-control'%>
    </p>
    <p>
        <%= f.label :position %>
        <%= f.text_field :position, :class => 'form-control'%>
    </p>
    <p>
        <%= f.submit%>
    </p>
<% end %>